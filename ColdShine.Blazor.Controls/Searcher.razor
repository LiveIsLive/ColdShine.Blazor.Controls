<CascadingValue Value="this.SearchItems" Name="SearchItems">
	@this.ChildContent
</CascadingValue>
@for(int i=0;i<this.SearchItems.Count;i++)
{
	BaseSearchItem searchItem = this.SearchItems[i];
	<table cellpadding="0" cellspacing="0" style="float:left;margin-left:@(i==0?0:10)px">
		<tr>
			<td>@searchItem.Title</td>
			<td>
				@switch (searchItem)
				{
					case StringSearchItem item:
						<RadzenTextBox @bind-Value=item.Value />
						break;
				}
			</td>
		</tr>
	</table>
}

@code {
	[Parameter]
	public RenderFragment? ChildContent { get; set; }



	protected System.Collections.Generic.List<BaseSearchItem> SearchItems { get; } = new();

	public void Test()
	{
		
	}
}