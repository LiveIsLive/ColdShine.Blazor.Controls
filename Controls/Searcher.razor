<CascadingValue Value="this.SearchItems" Name="SearchItems">
	@this.ChildContent
</CascadingValue>
<RadzenButton Click=this.SimpleSearch Text="查询" Icon="find_in_page" Style="float:left" />
<RadzenButton Click=this.SimpleReset Text="重置" Icon="autorenew" Style="float:left;margin-left:5px" />

@code {
	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	public void SimpleSearch()
	{
		this.Query.InvokeAsync(new Models.ConditionCollection(this.SearchItems.SelectMany(i=>i.GetSimpleSearcherConditions())));
	}

	public void SimpleReset()
	{
		foreach (BaseSearchItem item in this.SearchItems)
			item.ResetValue();
		this.Query.InvokeAsync(new Models.ConditionCollection());
	}

	[Microsoft.AspNetCore.Components.Parameter]
	public Microsoft.AspNetCore.Components.EventCallback<Models.ConditionCollection> Query { get; set; }

	protected System.Collections.Generic.List<BaseSearchItem> SearchItems { get; } = new();

	public void Test()
	{
		
	}
}